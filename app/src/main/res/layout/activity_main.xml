<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/TVSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="Sign In"
        android:textColor="#504D4D"
        android:textSize="30dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/ETUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVSignIn"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#30ffffff"
        android:drawableRight="@drawable/ic_baseline_person_24"
        android:hint="Username"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textColor="#504D4D"
        android:textColorHint="#504D4D" />

    <EditText
        android:id="@+id/ETPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ETUsername"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#30ffffff"
        android:drawableRight="@drawable/ic_baseline_remove_red_eye_24"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="#504D4D"
        android:textColorHint="#504D4D" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/BtnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ETPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#FF8400"
        android:text="LOGIN"
        android:textColor="#504D4D" />

    <TextView
        android:id="@+id/TVFrgPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/BtnLogin"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Forget Password"
        android:textColor="#504D4D"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TVOR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/TVOther"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="OR"
        android:textColor="#504D4D"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TVOther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/LLSocialIcons"
        android:gravity="center"
        android:text="Sign in with"
        android:textColor="#504D4D"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/LLSocialIcons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/IVGoogle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="20dp"
            app:srcCompat="@drawable/google" />

        <ImageView
            android:id="@+id/IVFacebook"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="20dp"
            app:srcCompat="@drawable/facebook"
            app:tint="#3b5998" />

        <ImageView
            android:id="@+id/IVTwitter"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="20dp"
            app:srcCompat="@drawable/twitter" />
    </LinearLayout>


</RelativeLayout>